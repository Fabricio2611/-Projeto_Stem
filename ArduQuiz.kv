Manager:
	Menu:
		name:'menu'
	Game:
		name:'game'
	Basico:
		name:'basico'
	Entrada:
	    name:'entrada'
	Saida:
	    name:'saida'
	Controle:
	    name:'controle'
	Matematica:
	    name:'mat'
	Variavel:
	    name: 'variavel'
	Comentario:
	    name:'comentario'
	Medio:
		name:'medio'
	Avancado:
		name:'avancado'

#<MenuButton@Button>:
	#font_size:'50sp'
	#background_normal:'menuButton.png'
	#background_down:'menuButtonpressed.png'
	#border: 90,90,90,90

<Menu>:
	BoxLayout:
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos


		orientation: 'vertical'
		padding: '200dp', '50dp'
		spacing:'100dp'
		Widget:
		BoxLayout:
			padding:"100dp"
			spacing:"150dp"
			Button:
				text:'Start'
				on_press:
				on_release:app.root.current = 'game'
			Button:
				text:'Exit'
				on_press:
				on_release:app.Stop()



<Game>:
	FloatLayout:
		canvas:
			Color:
				rgba:1,0.9,1,1
			Rectangle:
				size:self.size
				pos:self.pos
		orientation: 'horizontal'
		padding: '200dp', '50dp'
		spacing:'100dp'
		Widget:
		BoxLayout:
			padding:"100dp"
			spacing:"150dp"
			Button:
				text:'Básico'
				on_press:
				on_release:app.root.current = 'basico'
			Button:
				text:'Médio'
				on_press:
				on_release:app.root.current = 'medio'
			Button:
				text:'AvanÇado'
				on_press:
				on_release:app.root.current = 'avancado'


<Basico>:
	FloatLayout:
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
		orientation:'vertical'
		padding: '200dp', '50dp'
		spacing:'100dp'
    BoxLayout:
        orientation : 'vertical'
        spacing: 40
        Button:
            text: 'Blocos de Entrada'
            on_release: app.root.current='entrada'
        Button:
            text: 'Blocos de Saída'
            on_release: app.root.current='saida'
        Button:
            text: 'Blocos de Controle'
            on_release: app.root.current='controle'
        Button:
            text: 'Blocos Matemáticos'
            on_release: app.root.current='mat'
        Button:
            text: 'Blocos para Variáveis'
            on_release : app.root.current='variavel'
        Button:
            text: 'Blocos de Comentários'
            on_release: app.root.current='comentario'

<Entrada>:
    ScrollView:
        BoxLayout:
            orientation:'vertical'
            size_hint_y: None
            height: 1200
            spacing: 40
            Button:
                text:'*Aqui será aonde os comandos serão reconhecidos, e quais são os caminhos daplaca que serão usados nos seus projetos, além dos instrumentos utilizados, seu formato éarredondado, encaixando-se dentro de outros blocos que possuem caixas de texto.'
                text_size: self.size
                valign: 'top'
            Button:
                text:'*Como esta linguagem de blocos é utilizadas em projetos usando o Arduino, existem14 pinos comuns(contando o pino 0) e 6 analógicos(contando o pino analógico A0), alémdos pinos que distribuem e recebem energia elétrica.'
                text_size: self.size
                valign: 'top'
            Button:
                text: '*Agora alguns instrumentos comumente utilizados em projetos no Arduino quepodem ser reconhecidos usando linguagem em blocos:'
                text_size: self.size
                valign: 'top'
            Button:
                text: '-Mini Servo:'
                text_size: self.size
                valign: 'top'
            Button:
                text: '-Monitor Serial:'
                text_size: self.size
                valign: 'top'
            Button:
                text: '-Sensor de Distância Ultrasônico:'
                text_size: self.size
                valign: 'top'
            Button:
                text: '-Sensor de Temperatura:'
                text_size: self.size
                valign: 'top'

<Medio>:
	FloatLayout:
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
		orientation:'vertical'
		padding: '200dp', '50dp'
		spacing:'100dp'

<Avancado>:
	FloatLayout:
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
		orientation:'vertical'
		padding: '200dp', '50dp'
		spacing:'100dp'
